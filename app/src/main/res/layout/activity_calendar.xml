<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Calendar">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="8dp"
        android:outlineSpotShadowColor="@color/black"
        app:layout_constraintTop_toTopOf="parent">

        <android.widget.Button
            android:id="@+id/backB"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/oxygen_bold"
            android:text="«"
            android:textColor="@color/edge_blue"
            android:textSize="25dp" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/behind_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="13dp"
                android:contentDescription="@string/description"
                android:src="@drawable/behind_action_title" />

            <com.example.hicure.OutLineTextView
                android:id="@+id/action_title"
                style="@style/mainTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/main_title" />

        </FrameLayout>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/pop_up_frame"
                android:paddingVertical="10dp">

                <CalendarView
                    android:id="@+id/calendarView"
                    android:layout_width="match_parent"
                    android:layout_height="300dp" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="20dp"
                android:background="@drawable/pop_up_frame"
                android:orientation="vertical"
                android:padding="15dp">


                <TextView
                    android:id="@+id/diaryTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="날짜를 표시"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/edge_blue"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/breathTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/edge_blue"
                    android:gravity="center"
                    android:textSize="18sp"/>

            </LinearLayout>

            <FrameLayout
                android:id="@+id/dataChart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/pop_up_frame">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="15dp">


                    <FrameLayout
                        android:id="@+id/countL"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="10sp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <android.widget.Button
                            android:id="@+id/leftB"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center|start"
                            android:layout_marginHorizontal="50dp"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/oxygen_bold"
                            android:text="«"
                            android:textColor="@color/edge_blue"
                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/count_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/oxygen_bold"
                            android:text="n 회차"
                            android:textColor="@color/edge_blue"
                            android:textSize="23sp" />

                        <android.widget.Button
                            android:id="@+id/rightB"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center|end"
                            android:layout_marginHorizontal="50dp"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/oxygen_bold"
                            android:text="»"
                            android:textColor="@color/edge_blue"
                            android:textSize="25sp" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/textViewTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:gravity="center"
                        android:text="시간을 표시" />

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/linechart"
                        android:layout_width="260dp"
                        android:layout_height="160dp"
                        android:layout_marginVertical="15dp" />

                    <ProgressBar
                        android:id="@+id/progressBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:visibility="visible" />

                </LinearLayout>

                <TextView
                    android:id="@+id/noneData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="20dp"
                    android:fontFamily="@font/oxygen_light"
                    android:gravity="center"
                    android:text="데이터가 존재하지 않습니다."
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:visibility="gone" />

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"/>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>